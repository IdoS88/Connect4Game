@page
@model IdoShamir_EyalCohen_Connect4.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewPlayerRegister</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="" autocomplete="on">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="@Model.NewPlayerRegister.Name" class="control-label">Name</label>
                <input asp-for="@Model.NewPlayerRegister.Name" class="form-control" />
                <span asp-validation-for="@Model.NewPlayerRegister.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.NewPlayerRegister.Id" class="control-label">Id</label>
                <input asp-for="@Model.NewPlayerRegister.Id" class="form-control" />
                <span asp-validation-for="@Model.NewPlayerRegister.Id" class="text-danger"></span>

            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.NewPlayerRegister.Phone" class="control-label">Phone</label>
                <input asp-for="@Model.NewPlayerRegister.Phone" class="form-control" type="tel"/>
                <span asp-validation-for="@Model.NewPlayerRegister.Phone" class="text-danger"></span>
                @*TODO: Add regex for phone number CTRL K C*@
            </div>

            <div class="form-group mb-4">
                <label asp-for="@Model.NewPlayerRegister.CountrySelection" class="control-label">Select your Country</label>
                <br />
                @Html.DropDownListFor(m=>m.NewPlayerRegister.CountrySelection, new SelectList(Model.Names))
                <br>
                <span asp-validation-for="@Model.NewPlayerRegister.CountrySelection" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button asp-page="" class="btn btn-primary" autofocus>Register</button>
            </div>
        </form>
    </div>
<div>
        <a asp-page="Index">Back to User Login Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
