<h1>List of Best Game for Each Player</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].PlayerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].GameId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].DateInit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].TimePlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].GameStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Games)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateInit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimePlayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameStatus)
                </td>

            </tr>
        }
    </tbody>
</table>